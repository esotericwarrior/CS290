<body>
    <h1 align="center">Workout Tracker</h1>
<form id="insertForm" align="center">
  <fieldset>
    <legend>Add Exercise</legend>
    Name: <input type="text" name="name"><br>
    Reps: <input type="number" name="reps" min="0"><br>
    Weight: <input type="number" name="weight" min="0"><br>
    Date: <input type="date" name="date">(yyyy-mm-dd)<br>
    Lbs: <input type="checkbox" name="lbs" onclick="clicker(this)" value="1" checked><br>
    <input type="button" value="Add Workout" onclick="addRow(this.form.name.value, this.form.reps.value, this.form.weight.value, this.form.date.value, this.form.lbs.value)"><br>
  </fieldset>
</form>
<br><br>
<form id="updateForm" align="center">
  <fieldset id="updateFields">
    <legend>Update Exercise</legend>
    Name: <input type="text" name="name"><br>
    Reps: <input type="number" name="reps" min="0"><br>
    Weight: <input type="number" name="weight" min="0"><br>
    Date <input type="date" name="date">(yyyy-mm-dd)<br>
    Lbs: <input type="checkbox" name="lbs" onclick="clicker(this)" value="1" checked><br>
    <input type="hidden" name="id" value="0">
    <input type="button" id="updateBtn" value="Update Workout" disabled onclick="updateGet(this.form.id.value, this.form.name.value, this.form.reps.value, this.form.weight.value, this.form.date.value, this.form.lbs.value)"><br>
  </fieldset>
</form>
<div id="wrapper">
    <h1 align="center">Completed Exercises</h1>
    <table align='center' id="dataTable">
        <tbody id="table">
  <tr>
    <th>Name</th>
    <th>Reps</th>
    <th>Weight</th>
    <th>Date</th>
    <th>Unit</th>
    <th>Edit</th>
    <th>Delete</th>
    <!--<th colspan=2></th>-->
  </tr>
    {{#each results}}
    <tr id="{{id}}">
        <td>{{name}}</td>
        <td>{{reps}}</td> 
        <td>{{weight}}</td>
        <td>{{date}}</td>
        <td>{{lbs}}</td>
        <td><button type="button" onclick="updateRow({{id}})">Edit</button></td>
        <td><button type="button" onclick="deleteRow({{id}})">Delete</button></td>
    </tr>
    {{/each}}
